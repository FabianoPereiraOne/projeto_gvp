generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  created  DateTime @default(now())

  Profile Profile[]
  @@map("Users")
}

model Profile {
  id      String   @id @default(uuid())
  created DateTime @default(now())
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  name    String
  surname String

  @@map("Profiles")
}

model Product {
  id        String   @id @default(uuid())
  name      String
  barCode   String
  validity  String
  createdAt DateTime @default(now())

  @@map("Products")
}
